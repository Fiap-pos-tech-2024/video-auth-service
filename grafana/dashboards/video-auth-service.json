{
  "uid": "video-auth-prom",
  "title": "Video Auth Service - Prometheus",
  "tags": ["video-auth", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Throughput (RPS)",
      "datasource": {"type": "prometheus", "uid": "prometheus-cloud"},
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_count[1m]))",
          "refId": "A"
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
    },
    {
      "type": "timeseries",
      "title": "Taxa de Sucesso (2xx)",
      "datasource": {"type": "prometheus", "uid": "prometheus-cloud"},
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_count{code=~\"2..\"}[1m])) / sum(rate(http_request_duration_seconds_count[1m]))",
          "refId": "A"
        }
      ],
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
    },
    {
      "type": "table",
      "title": "Requisições por rota",
      "datasource": {"type": "prometheus", "uid": "prometheus-cloud"},
      "targets": [
        {
          "expr": "round(sum(increase(http_request_duration_seconds_count[1h])) by (route))",
          "format": "table",
          "refId": "A"
        }
      ],
      "gridPos": {"x": 0, "y": 8, "w": 24, "h": 10}
    }
  ],
  "time": {"from": "now-15m", "to": "now"}
}
